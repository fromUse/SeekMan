<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/login_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/returns"
            android:padding="@dimen/normal_space"/>
        <TextView
            android:id="@+id/login_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录"
            android:textSize="@dimen/tetle_text_size"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyblue"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <ImageView
            android:src="@mipmap/logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>
            <EditText
                android:id="@+id/user_username"
                android:inputType="phone"
                android:ems="11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:padding="@dimen/normal_space"
                android:hint="请输入手机号"
                android:textSize="@dimen/edit_text_size"
                android:textColor="@color/darkgrey"
                android:singleLine="true"
                android:background="@drawable/layout_btoom_border"
                android:drawableLeft="@mipmap/username"
                android:drawablePadding="@dimen/big_space"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:layout_marginTop="@dimen/big_space"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>
            <EditText
                android:id="@+id/user_passwd"
                android:inputType="textPassword"
                android:maxEms="18"
                android:minEms="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:padding="@dimen/normal_space"
                android:hint="请输入密码"
                android:textSize="@dimen/edit_text_size"
                android:textColor="@color/darkgrey"
                android:singleLine="true"
                android:background="@drawable/layout_btoom_border"
                android:drawableLeft="@mipmap/userpassword"
                android:drawablePadding="@dimen/big_space"
                android:drawableRight="@mipmap/gift"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:layout_marginTop="@dimen/big_space"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
            <Button
                android:id="@+id/user_login"
                android:layout_gravity="center"
                android:text="登录"
                android:textSize="@dimen/message_text_size"
                android:textColor="@color/white"
                android:background="@drawable/shape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
        </LinearLayout>

        <TextView
            android:id="@+id/user_forgot"
            android:text="忘记密码"
            android:lines="2"
            android:textSize="@dimen/min_text_size"
            android:textColor="@color/cornflowerblue"
            android:gravity="center"
            android:layout_marginBottom="@dimen/big_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/aliceblue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

            <TextView
                android:id="@+id/user_register"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="The third party Login Let 's go !"
                android:textColor="@color/skyblue"
                android:textSize="@dimen/edit_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/little_space"
                android:drawableLeft="@mipmap/logo"
                android:drawablePadding="@dimen/normal_space"
                android:background="@drawable/layout_border"/>

        <TextView
            android:id="@+id/user_surprise"
            android:text="Log in with surprise"
            android:textSize="@dimen/message_text_size"
            android:textColor="@color/skyblue"
            android:padding="@dimen/little_space"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>