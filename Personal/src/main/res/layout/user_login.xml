<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:background="@drawable/layout_btoom_border"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="65dp">
            <ImageView
                android:src="@mipmap/username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.2"
                />
            <EditText
                android:id="@+id/user_phone"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:hint="11111111"
                android:layout_weight="1"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/layout_btoom_border"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="65dp">
            <ImageView
                android:src="@mipmap/userpassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.2"
                />
            <EditText
                android:id="@+id/user_password"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:hint="11111111"
                android:layout_weight="1"
                android:singleLine="true"/>
        </LinearLayout>
        <Button
            android:id="@+id/user_login"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="100dp"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="@color/skyblue"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_forgot"
            android:text=" Forgot password ?"
            android:lines="2"
            android:textSize="16sp"
            android:textColor="@color/skyblue"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/aliceblue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/layout_border"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/logo"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_register"
                android:gravity="center"
                android:text="Registered immediately Let 's go!"
                android:textColor="@color/skyblue"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/user_surprise"
            android:text="Log in with surprise"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/skyblue"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>