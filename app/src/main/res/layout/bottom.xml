<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:background="@color/topColor"
        android:id="@+id/title"
        android:gravity="center"
        android:text="广场"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <FrameLayout
        android:id="@+id/mframe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    
    <RadioGroup
        android:id="@+id/mRadioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/main_square"
            android:layout_weight="1"
            android:button="@null"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/square"
            android:paddingLeft="0dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广场"
            android:checked="false" />
        <RadioButton
            android:id="@+id/main_theme"
            android:layout_weight="1"
            android:button="@null"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/theme"
            android:paddingLeft="0dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题"
            />
        <RadioButton
            android:id="@+id/main_personal"
            android:layout_weight="1"
            android:button="@null"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/personal"
            android:paddingLeft="0dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人"
            />
    </RadioGroup>


</LinearLayout>